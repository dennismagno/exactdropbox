<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Exact DropBox</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Exact DropBox</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
               @if (!Model.ExactIsAuthenticated)
               {
                   using (Html.BeginForm("ExactConnect", "Home", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                   {
                    <input type="submit" value="Login to Exact API" class="btn btn-danger" />
                   }
               }
                @if (!Model.DropboxIsAuthenticated)
                {
                    using (Html.BeginForm("DropBoxConnect", "Home", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                    {
                        <input type="submit" value="Login to dropbox" class="btn btn-primary" />
                    }
                }
            </div><!--/.navbar-collapse -->
        </div>
    </nav>
    <div class="jumbotron">
        <div class="container">
            <h1>Exact Dropbox</h1>
            <p>This is a sample program that will demonstrate uploading of files in DropBox and Exact REST Api</p>            
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DD Exact DropBox</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
